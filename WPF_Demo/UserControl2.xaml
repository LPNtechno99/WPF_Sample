<UserControl x:Class="WPF_Demo.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Demo"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="650">
    <StackPanel>
        <Border MinWidth="300" Width="auto" Padding="5 0 5 0" Opacity="0.8" CornerRadius="10 10 0 0" BorderThickness="1 1 1 0" Background="{DynamicResource WelcomeBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" Height="200">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Rectangle Fill="{DynamicResource lemon}" Height="100"/>
                <TextBlock Grid.Column="0" FontSize="20" FontWeight="Bold" FontFamily="consolas" Padding="5">Chanh</TextBlock>
                <Rectangle Fill="{DynamicResource pear}" Grid.Column="1" Height="100"/>
                <TextBlock Grid.Column="1" FontSize="20" FontWeight="Bold" FontFamily="consolas" Padding="5">Lê</TextBlock>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
